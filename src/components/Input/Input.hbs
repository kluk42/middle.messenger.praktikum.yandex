<div class="inputField {{inputWrapperStyle}}">
    <label for={{name}} class="inputField__label {{labelStyle}}">{{label}}</label>
    <input type="{{type}}" {{#if value}}value={{value}}{{/if}} class="inputField__input {{inputStyle}}" name={{name}}>
    <p class="inputField__error {{errorStyle}}">{{errorText}}</p>
</div>
